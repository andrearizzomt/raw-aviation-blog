{
  "kind": "collectionType",
  "collectionName": "author_profiles",
  "info": {
    "singularName": "author-profile",
    "pluralName": "author-profiles",
    "displayName": "Author Profile",
    "description": "Extended author information for blog contributors"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "displayName": {
      "type": "string",
      "required": true
    },
    "bio": {
      "type": "richtext",
      "required": true
    },
    "profilePhoto": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "position": {
      "type": "string",
      "required": true
    },
    "isPublicAuthor": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "authorType": {
      "type": "enumeration",
      "enum": ["founder", "external_contributor", "guest"],
      "required": true,
      "default": "guest"
    },
    "authorSlug": {
      "type": "uid",
      "targetField": "displayName",
      "required": true
    },
    "showContributionCount": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "socialLinks": {
      "type": "json"
    }
  }
} 